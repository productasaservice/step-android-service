<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/StepActionbarStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="StepActionbarStyle"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_color</item>
        <item name="logo">@drawable/ic_title</item>
    </style>

    <style name="NoTitleActionbarStyle" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
    </style>

    <style name="StepButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

</resources>
