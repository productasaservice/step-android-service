<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger circle in back -->
    <item android:id="@+id/main_marker_ring">
        <shape android:shape="oval">
            <stroke android:color="@color/main_marker_color_with_alpha"
                android:width="1dp"/>
            <solid android:color="@android:color/transparent"/>
            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>
    </item>
    <!-- Smaller circle in front -->
    <item android:id="@+id/main_marker_circle">
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="5dp"/>
            <solid android:color="@color/main_marker_color"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>
</layer-list>
